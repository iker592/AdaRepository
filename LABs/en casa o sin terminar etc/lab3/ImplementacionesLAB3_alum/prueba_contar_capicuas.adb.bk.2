WITH Ada.Text_IO, Ada.Integer_Text_IO;
USE Ada.Text_IO, Ada.Integer_Text_IO;
WITH Es_Capicua;

PROCEDURE Prueba_Contar_Capicuas IS

   Type T_Vector IS ARRAY (1..10) OF Integer;

   FUNCTION Contar_Capicuas (V: T_Vector; N:Natural) RETURN Integer IS
   -- Pre: Todos los elementos de V son mayores que 0
   -- Post: Devuelve cuántos capicúas hay en V cuyo último dígito sea igual a N

      cnt:integer:=0;
   BEGIN
      FOR I IN V'RANGE LOOP
         IF ES_Capicua (V(I)) AND V(I) mod 10=N THEN Cnt:=Cnt+1; END IF;
      END LOOP;
      Return cnt;
   END Contar_Capicuas;

   PROCEDURE Escribir(V: T_Vector) IS
      -- salida: secuencia de 10 numeros S(SE)
      -- post: los 10 números son los elementos de V
   BEGIN
      put('(');
      FOR I IN V'RANGE LOOP
         Put(V(I), 6);
      END LOOP;
      Put_Line(")");
   END Escribir;

   V, W: T_Vector;
BEGIN
   V:= (55, 11, 22, 33, 343, 45654, 676, 6776, 99, 1001);
   Put_Line("Probamos primero con un vector donde todos son capicuas");
   New_Line; Put("V = "); Escribir(V); New_line;

   put("CASO 1: La cantidad de capicuas terminados en 1 en V es ");
   Put(Contar_Capicuas(V,1),0);
   New_Line; New_Line;

   Put("CASO 2: La cantidad de capicuas terminados en 5 en V es ");
   Put(Contar_Capicuas(V,5),0);
   New_Line; New_Line;

   Put("CASO 3: La cantidad de capicuas terminados en 7 en V es ");
   Put(Contar_Capicuas(V,7),0);
   New_Line; New_Line;

   W:= (54, 10, 22, 33, 343, 45654, 676, 6776, 99, 1008);
   Put_Line("Probamos ahora con un vector donde NO todos son capicuas");
   New_Line; Put("W = "); Escribir(W); New_line;

   Put("CASO 4: La cantidad de capicuas terminados en 8 en W es ");
   Put(Contar_Capicuas(W,8),0);
   New_Line; New_Line;

   Put("CASO 5: La cantidad de capicuas terminados en 4 en W es ");
   Put(Contar_Capicuas(W,4),0);
   New_Line; New_Line;

   Put("CASO 5: La cantidad de capicuas terminados en 6 en W es ");
   Put(Contar_Capicuas(W,6),0);
   New_Line; New_Line;

   Put_Line("Fin de las pruebas");

END Prueba_Contar_Capicuas;



